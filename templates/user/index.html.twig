{% extends 'base.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block body %}

<h1 class="ms-5">Liste des utilisateurs</h1>
    <div class="ms-5 w-75 " >
        <table class="table">
            <thead>
                <tr>
                    <th>N°</th>
                    <th>Email</th>
                    <th>Rôles</th>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>                   
                    <td>{{ user.name }}</td>
                    <td>{{ user.firstname }}</td>
                    <td>
                        
                        <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-warning">Modifier</a
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">Aucune données</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <a href="{{ path('app_user_new') }}" class="btn btn-primary mb-5 mx-5" >Ajouter</a>
    <a href="{{ path('app_config') }}" class="btn btn-secondary  mb-5 mx-5">Retour</a>
{% endblock %}
