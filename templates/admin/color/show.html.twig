{% extends 'base.html.twig' %}

{% block title %}Color{% endblock %}

{% block body %}
    <h1 class="mx-5">Couleur : {{ color.name }} </h1>
    <div class="ms-5 w-75">
        <table class="table">
            <tbody>
            
                <tr>
                    <th>Nom</th>
                    <td>{{ color.name }}</td>
                </tr>
            </tbody>
        </table>
    </div>

    <a href="{{ path('app_color_list') }}" class="btn btn-secondary mb-2 ms-5">Retour</a>

    <a href="{{ path('app_color_edit', {'id': color.id}) }}" class="btn btn-warning mb-2">Modifier</a>

    {{ include('admin/color/_delete_form.html.twig') }}
{% endblock %}
