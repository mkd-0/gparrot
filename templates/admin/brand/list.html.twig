{% extends 'base.html.twig' %}

{% block title %}Brand index{% endblock %}

{% block body %}
    <h1 class="ms-5">Liste des marques</h1>
    <div class="ms-5 w-50 " >  
        <table class="table mx-2">
            <thead>
                <tr>
                    <th>N°</th>
                    <th>Marque</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for brand in brands %}
                <tr>
                    <td>{{ brand.id }}</td>
                    <td>{{ brand.name }}</td>
                    <td>
                        <a href="{{ path('app_brand_show', {'id': brand.id}) }}" class="btn btn-info">Voir</a>
                        <a href="{{ path('app_brand_edit', {'id': brand.id}) }}" class="btn btn-warning">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucune données</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <a href="{{ path('app_brand_new') }}" class="btn btn-primary mb-5 mx-5" >Ajouter</a>
    <a href="{{ path('app_config') }}" class="btn btn-secondary  mb-5 mx-5">Retour</a>
{% endblock %}
