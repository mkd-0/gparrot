{% extends 'base.html.twig' %}

{% block title %}Modèle{% endblock %}

{% block body %}
    <h1 class="px-5">Liste des modèles</h1>

    <div class="ms-5 w-75 " >
        <table class="table">
            <thead>
                <tr>
                    <th>N°</th>
                    <th>Modèle</th>
                    <th >Marque</th>
                    <th >actions</th>
                </tr>
            </thead>
            <tbody>
            {% for model in models %}
                <tr>
                    <td>{{ model.id }}</td>
                    <td >{{ model.name }}</td>
                    <td>{{ model.brand.name }}</td>
                    <td>
                        <a href="{{ path('app_model_show', {'id': model.id}) }}" class="btn btn-info">Voir</a>
                        <a href="{{ path('app_model_edit', {'id': model.id}) }}" class="btn btn-warning">Modifier</a
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">aucune données</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <a href="{{ path('app_model_new') }}" class="btn btn-primary mb-5 mx-5" >Ajouter</a>
    <a href="{{ path('app_config') }}" class="btn btn-secondary  mb-5 mx-5">Retour</a>
{% endblock %}
