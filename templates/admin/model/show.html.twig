{% extends 'base.html.twig' %}

{% block title %}Model{% endblock %}

{% block body %}
    <h1 class="mx-5">Modèle : {{ model.name }} </h1>

    <div class="ms-5 w-75">
        <table class="table">
            <tbody>
                <tr>
                    <th>N°</th>
                    <td>Modèle</td>
                    <td>Marque</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ model.name }}</td>
                    <td>{{ model.brand.name }}</td>
                </tr>
            </tbody>
        </table>
    </div>
    <a href="{{ path('app_model_list') }}" class="btn btn-secondary mb-2 ms-5">Retour</a>

    <a href="{{ path('app_model_edit', {'id': model.id}) }}" class="btn btn-warning mb-2">Modifier</a>
    

    {{ include('admin/model/_delete_form.html.twig') }}
{% endblock %}
