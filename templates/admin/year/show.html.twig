{% extends 'base.html.twig' %}

{% block title %}Year{% endblock %}

{% block body %}
    <h1 class="mx-5">Année : {{ year.name }}</h1>

    <div class="ms-5 w-25">
        <table class="table">
            <tbody>
                
                <tr>
                    <th>Année</th>
                    <td>{{ year.name }}</td>
                </tr>
            </tbody>
        </table>
    </div>
    <a href="{{ path('app_year_list') }}" class="btn btn-secondary mb-2 ms-5">Retour</a>

    <a href="{{ path('app_year_edit', {'id': year.id}) }}" class="btn btn-warning mb-2">Modifier</a>

    {{ include('admin/year/_delete_form.html.twig') }}
{% endblock %}
