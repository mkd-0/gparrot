{% extends 'base.html.twig' %}

{% block title %}Années{% endblock %}

{% block body %}
    <h1 class="px-5">Liste des années</h1>

    <div class="ms-5 w-75 " >
        <table class="table">
            <thead>
                <tr>
                    <th>N°</th>
                    <th>Anée</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for year in years %}
                <tr>
                    <td>{{ year.id }}</td>
                    <td>{{ year.name }}</td>
                    <td>
                        <a href="{{ path('app_year_show', {'id': year.id}) }}" class="btn btn-info">Voir</a>
                        <a href="{{ path('app_year_edit', {'id': year.id}) }}" class="btn btn-warning">Modifier</a
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucune données</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <a href="{{ path('app_year_new') }}" class="btn btn-primary mb-5 mx-5" >Ajouter</a>
    <a href="{{ path('app_config') }}" class="btn btn-secondary  mb-5 mx-5">Retour</a>
{% endblock %}
