{% extends 'base.html.twig' %}

{% block title %}Service index{% endblock %}

{% block body %}
    <!-- Title -->
    <h1 class="px-5">Liste des services</h1>
        <!-- Datatable -->
        <div class="ms-5 w-75">
        <table class="table">
            <thead>
                <tr>
                    <th>N°</th>
                    <th>Nom</th>
                    <th>Description</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for service in services %}
                <tr>
                    <td>{{ service.id }}</td>
                    <td>{{ service.title }}</td>
                    <td>{{ service.description }}</td>
                    <td>
                        <!-- Button to redirect detail page -->
                        <a href="{{ path('app_service_show', {'id': service.id}) }}" class="btn btn-info">Voir</a>
                        <!-- Button to redirect edit page -->
                        <a href="{{ path('app_service_edit', {'id': service.id}) }}" class="btn btn-warning">Modifier</a
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Aucune données</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        </div>
<!-- Button to redirect add page -->
<a href="{{ path('app_service_new') }}" class="btn btn-primary mb-5 mx-5" >Ajouter</a>
<!-- Button to go to back -->
<a href="{{ path('app_config') }}" class="btn btn-secondary  mb-5 mx-5">Retour</a>
{% endblock %}
