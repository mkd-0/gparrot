{% extends 'base.html.twig' %}

{% block title %}Horaires{% endblock %}

{% block body %}
    <h1 class="px-5">Horaires</h1>

    <div class="w-75 ms-5">
        <table class="table">
            <thead>
                <tr>
                    
                    <th>Jour</th>
                    <th>Matin</th>
                    <th>Après-midi</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for hour in hours %}
                <tr>
                    
                    <td>{{ hour.day }}</td>
                    <td>{{ hour.morning }}</td>
                    <td>{{ hour.afternoon }}</td>
                    <td>
                        
                        <a href="{{ path('app_hour_edit', {'id': hour.id}) }}" class="btn btn-warning">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Aucune données</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <a href="{{ path('app_hour_new') }}" class="btn btn-primary mb-5 mx-5" >Ajouter</a>
    <a href="{{ path('app_config') }}" class="btn btn-secondary  mb-5 mx-5">Retour</a>
{% endblock %}
